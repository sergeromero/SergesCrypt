<!doctype html>
<html>
    <head>
        <title>The Crypt</title>
        <link rel="stylesheet" href="/css/thecrypt.css">
        <script src="/js/handlebars.min.js"></script>
        <script src="/js/jquery-3.1.1.min.js"></script>

        <script src="/constants/constants.js"></script>
        <script src="/helpers/httpRequester.js"></script>

        {{{_sections.clientSideScripts}}}
        
        <!-- Templates for the Handlebars Client Side Views -->		  
		<script type="text/x-template" id="playerTemplate">
			<h3>\{{name}}</h3>
			<p>\{{health}}</p>
			  
			<ol id="playerItems">
                \{{#each items}}
                    <li>\{{item}}</li>
                \{{/each}}
            </ol>
		</script>
		  
		<script type="text/x-template" id="placeTemplate">
			<h3>\{{title}}</h3>
			<p>\{{description}}</p>
			  
			<div class="placePanel">
				<h4>Items</h4>
				<ol id="placeItems">
                    \{{#each items}}
                        <li>\{{item}}</li>
                    \{{/each}}
                </ol>
			</div>
			  
			<div class="placePanel">
				<h4>Exits</h4>
				<ol id="placeExits">
                    \{{#each exits}}
                        <li>\{{exit}}</li>
                    \{{/each}}
                </ol>
			</div>
		</script>
		  
		<script type="text/x-template" id="messageTemplate">
			<p>*** \{{message}} ***</p>
		</script>

        <script type="text/x-template" id="newAdventureTemplate">
            <input type="hidden" id="adventureId" name="adventureId" value="\{{adventureDetails.AdventureId}}">
            <h3>You have chosen \{{adventureDetails.Title}}</h3>
            <p>\{{adventureDetails.Description}}</p>
            <p><img src="/img/\{{adventureDetails.BackgroundFile}}.jpg" alt="\{{adventureDetails.Title}} Picture"></p>
            <br>
            <div id="controls">
                <button id="btnCommand">Enter ...</button>
            </div>
        </script>
    </head>
    <body>
        {{{body}}}
    </body>
</html>